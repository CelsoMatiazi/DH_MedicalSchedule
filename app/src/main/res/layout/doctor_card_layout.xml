<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/doctor_card_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/green_transp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
        />


        <TextView
            android:id="@+id/card_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Dr. Tranquilli"
            style="@style/Title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/doctor_card_image"
            android:layout_marginStart="14dp"
        />


        <TextView
            android:id="@+id/card_doctor_specilist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Subtitle_green"
            app:layout_constraintTop_toBottomOf="@id/card_doctor_name"
            app:layout_constraintStart_toStartOf="@id/card_doctor_name"
            tools:text="Specilist medicine"
        />



        <TextView
            android:id="@+id/card_doctor_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Subtitle_green"
            android:textColor="@color/dark_grey"
            app:layout_constraintTop_toBottomOf="@id/card_doctor_specilist"
            app:layout_constraintStart_toStartOf="@id/card_doctor_name"
            tools:text="6 Years experience"
            />

        <View
            android:id="@+id/card_doctor_percent_box"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@color/green"
            app:layout_constraintTop_toBottomOf="@id/card_doctor_experience"
            app:layout_constraintStart_toStartOf="@id/card_doctor_name"
            android:layout_marginTop="11dp"
        />


        <TextView
            android:id="@+id/card_doctor_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Subtitle_green"
            android:textColor="@color/dark_grey"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/card_doctor_percent_box"
            app:layout_constraintStart_toEndOf="@id/card_doctor_percent_box"
            app:layout_constraintBottom_toBottomOf="@id/card_doctor_percent_box"
            tools:text="87%"
        />


        <View
            android:id="@+id/card_doctor_patient_box"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@color/green"
            app:layout_constraintStart_toEndOf="@id/card_doctor_percent"
            app:layout_constraintTop_toTopOf="@id/card_doctor_percent_box"
            app:layout_constraintBottom_toBottomOf="@id/card_doctor_percent_box"
            android:layout_marginStart="17dp"
            />


        <TextView
            android:id="@+id/card_doctor_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Subtitle_green"
            android:textColor="@color/dark_grey"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/card_doctor_patient_box"
            app:layout_constraintStart_toEndOf="@id/card_doctor_patient_box"
            app:layout_constraintBottom_toBottomOf="@id/card_doctor_patient_box"
            tools:text="Patient Stories"
        />


        <TextView
            android:id="@+id/card_doctor_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/doctor_card_image"
            app:layout_constraintStart_toStartOf="@id/doctor_card_image"
            android:layout_marginTop="17dp"
            tools:text="Next Available"
            style="@style/Subtitle_green"
            android:textStyle="bold"
        />


        <TextView
            android:id="@+id/card_doctor_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_doctor_available"
            app:layout_constraintStart_toStartOf="@id/card_doctor_available"
            tools:text="10:00"
            style="@style/Subtitle_green"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="5dp"
        />


        <TextView
            android:id="@+id/card_doctor_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_doctor_available"
            app:layout_constraintStart_toEndOf="@id/card_doctor_hour"
            tools:text="AM tomorrow"
            style="@style/Subtitle_green"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
        />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="112dp"
            android:layout_height="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/green"
            android:text="@string/book_now"
            android:textColor="@color/white"
            android:textAllCaps="false"
        />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_heart_border_icon"
            tools:ignore="ContentDescription" />




    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>